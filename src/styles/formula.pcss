.tc-formula {
  width: 100%;
  height: 100%;
  border-collapse: collapse;
  table-layout: fixed;

  &__textarea {
    border: unset;
    resize: vertical;
  }

  &__wrap {
    display: flex;
    flex-direction: column;
    border: 1px solid #DBDBE2;
    border-radius: 3px;
    position: relative;
    height: 100%;
    width: 100%;
    box-sizing: border-box;
  }

  &__cell {
    border: 1px solid #DBDBE2;
    padding: 0;
    vertical-align: top;
  }

  &__area {
    padding: 10px;
    height: 100%;
  }

  &__inp {
    outline: none;
    flex-grow: 100;
    min-height: 1.5em;
    height: 100%;
    overflow: hidden;
  }

  &__highlight:focus-within {
    background-color: rgba(173, 164, 176, 0.1);
  }

  tbody tr:first-child td {
    border-top: none;
  }

  tbody tr:last-child td {
    border-bottom: none;
  }

  tbody tr td:last-child {
    border-right: none;
  }

  tbody tr td:first-child {
    border-left: none;
  }
}

.ce-block {
  &--selected &__content {
    background: transparent;
  }
}